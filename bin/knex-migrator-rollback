#!/usr/bin/env node

let program = require('commander');
let utils = require('../lib/utils');

let logging = require('../logging');
let knexMigrator;

utils.getKnexMigrator({path: process.cwd()})
    .then(function (KnexMigrator) {
        program
            .option('--mgpath <path>')
            .option('--force')
            .option('--version')
            .parse(process.argv);

        try {
            knexMigrator = new KnexMigrator({knexMigratorFilePath: program.mgpath, executedFromShell: true});
        } catch (err) {
            logging.error(err);
            process.exit(1);
        }

        return knexMigrator.rollback({force: program.force, version: program.version})
            .then(function () {
                logging.info('Rollback was successful.');
            });
    })
    .catch(function (err) {
        logging.error(err.message);

        if (err.help) {
            logging.info(err.help);
        }

        process.exit(1);
    });
