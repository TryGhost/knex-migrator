#!/usr/bin/env node
'use strict';

const program = require('commander');
const utils = require('../lib/utils');
const logging = require('../lib/logging');

utils.getKnexMigrator({path: process.cwd()}).then((KnexMigrator) => {
    let knexMigrator;

    program
        .option('--mgpath <path>')
        .parse(process.argv);

    try {
        knexMigrator = new KnexMigrator({knexMigratorFilePath: program.mgpath});
    } catch (err) {
        logging.error(err);
        process.exit(1);
    }

    return knexMigrator.isDatabaseOK().then(function () {
        logging.info('Woohoo, Database is healthy');
    });
}).catch(function (err) {
    logging.error(err.message);

    if (err.help) {
        logging.info(err.help);
    }

    process.exit(1);
});
