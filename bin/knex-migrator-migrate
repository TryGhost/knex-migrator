#!/usr/bin/env node
'use strict';

const command = require('../lib/command');
const logging = require('../lib/logging');

command(
    program => program
        .option('--v <item>')
        .option('--only <item>')
        .option('--force')
        .option('--init'),
    (knexMigrator, args) => knexMigrator.migrate({
        version: args.v,
        only: args.only,
        force: args.force,
        init: args.init
    }).then(() => {
        logging.info('Finished database migration!');
    })
);
